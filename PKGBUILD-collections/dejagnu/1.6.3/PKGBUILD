pkgname="dejagnu"
pkgver="1.6.3"
pkgrel="1"
pkgdesc=""
arch=('x86_64')
url="https://www.gnu.org/software/dejagnu/"
license=('')
source=("https://ftp.gnu.org/gnu/dejagnu/dejagnu-1.6.3.tar.gz")
md5sums=('68c5208c58236eba447d7d6d1326b821')
install="${pkgname}.install"

#prepare() {
#}

build() {
cd "${srcdir}/${pkgname}-${pkgver}"

mkdir -v build
cd       build

../configure --prefix=/
makeinfo --html --no-split -o doc/dejagnu.html ../doc/dejagnu.texi
makeinfo --plaintext       -o doc/dejagnu.txt  ../doc/dejagnu.texi
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    
    make DESTDIR=${pkgdir} install
    install -v -dm755  ${pkgdir}/usr/share/doc/dejagnu-1.6.3
    install -v -m644   doc/dejagnu.{html,txt} ${pkgdir}/usr/share/doc/dejagnu-1.6.3
}

check() {
cd "${srcdir}/build/${pkgname}-${pkgver}"
make check 2>&1 | tee ../../../${pkgname}-${pkgver}-test.log
}
