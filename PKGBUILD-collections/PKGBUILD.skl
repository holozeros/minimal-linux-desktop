build() {
cd "${pkgname}-${pkgver}"
./configure --prefix=/usr
make
}

check() {
cd "${pkgname}-${pkgver}"
make check 2>&1 | tee ../../${pkgname}-${pkgver}-test.log
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR=${pkgdir} install

rm -v ../../"${pkgname}-${pkgver}".tar.xz
rm -rf ../../src
}
