pkgname="linux"
pkgver="5.15.2"
pkgrel="1"
pkgdesc=""
arch=('x86_64')
url="http://www."
license=('')
#backup=()
source=("${pkgname}-${pkgver}".tar.xz)
#install=linux-5.15.2.install

prepare() {
cd "${pkgname}-${pkgver}"
make defconfig
cp /sources/linux/"${pkgver}"/config-"${pkgver}" .config
make menuconfig
}

build() {
cd "${pkgname}-${pkgver}"
make -j16
}

package() {
cd "${pkgdir}"
mkdir -pv boot
cp -v "${srcdir}/${pkgname}-${pkgver}"/arch/x86/boot/bzImage boot/vmlinuz-5.15.2-1
cp -v "${srcdir}/${pkgname}-${pkgver}"/.config boot/config-5.15.2-1
}
